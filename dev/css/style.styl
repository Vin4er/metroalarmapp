
html
	width 100%
	height 100%
body
	-webkit-touch-callout: none
	-webkit-text-size-adjust: none
	-webkit-user-select: none
	background-color: #E4E4E4
	background-attachment: fixed
	font-family: 'Roboto', sans-serif;
	height: 100%
	margin: 0px
	padding: 0px
	color #ffffff
	width: 100%

body
	*
		box-sizing: border-box
		font-family: 'Roboto', sans-serif;
audio, video
	display none
.table
	display table
	width 100%
.row
	display table-row
.cell
	text-align center
	display table-cell
	vertical-align middle
	width 50%
.hidden
	display none

.o-clocker
	position relative
	width 100%
	height 100%
	background: radial-gradient(ellipse at center, #232632 0%,#12141a 100%);
	&-loading
		background: inherit
		position absolute
		z-index 9999
		bottom 0
		right 0
		left 0
		top 0
		.table
			height 100%
		&-text
			text-align: center;
			font-size: 28px;
			letter-spacing: 1px;
			color: #fff;
			font-weight: 300;
			padding-top: 25px;
		&-logo
			position relative
			z-index 99999
			display inline-block
			// height 110px
			width 100%
			text-align center
			img
				display: inline-block;
				width: 242px;
	&-sleep
		padding-left 15px
		padding-right 15px
		position absolute
		bottom 0
		right 0
		left 0
		top 0
		&-currentstation
			text-align center
			&-label
				font-size 14px
				color rgba(255,255,255,.6)
			&-name
				font-size 16px
				color rgba(255,255,255,1)
		&-bigtimer
			position absolute
			bottom 0
			right 0
			left 0
			top 0
			.table
				height 100%
				span
					font-weight: 300
					display: block
					height: 88px
					line-height: 88px
					font-size: 120px
				div
					font-size 40px
					font-weight 300
					&.texttext
						font-size: 20px
						font-weight: 300
						padding-top 10px
		&-metro
			padding-top 45px
			&-from
				&:before
					content: ''
					width: 8px
					height: 22px
					border: 1px solid #fff
					border-right: none
					position: absolute
					left: 4px
					top: 11px
			&-item
				text-transform: capitalize
				font-size: 13px
				color: #fff
				padding-left: 20px
				height: 23px
				line-height: 23px
				position: relative
	&-settings
		padding-left 15px
		padding-right 15px
		position absolute
		bottom 0
		right 0
		left 0
		top 0
		&-selects
			padding-bottom 15px
			padding-top 30px
			position: relative;
			z-index: 10;
			&-item
				padding-bottom 25px
				@media screen and (max-height: 500px)
					padding-bottom 10px
			&-select
				width 100%
				input
					background: rgba(255,255,255, .1)
					color #ff4f4f
					font-size 14px
					font-weight 400
					height 33px
					border 0
					width 100%
					outline none
					padding-left 12px
					padding-right 12px
					border-radius 8px
			&-label
				color white
				font-size 18px
				font-weight 300
				padding-bottom 10px
				padding-left 6px
		&-timer
			&-time
				width 30%
				text-align right
				.wrap-time
					display inline-block
					text-align center
					span
						font-size 60px
						font-weight 300
						display block
						height 62px
					b
						font-size 18px
						font-weight 300
						height 17px
						display block
			&-button
				width 70%
				text-align center
				a
					width: 85%
					border-top: 1px solid #fff
					border-bottom: 1px solid #fff
					font-size: 18px
					font-weight: 700
					text-align: center
					line-height: 65px
					display: inline-block
					color: #fff
					text-decoration: none
					position: relative
					top: 4px
		&-steps
			position absolute
			bottom: 150px
			@media screen and (max-height: 540px)
				bottom 110px
			left: 0
			right 0
			&-line
				&-wrap
					position: absolute
					height: 3px
					right 15%
					left 15%
					top 19px
				&-item
					height 100%
					background: #00bff3
			&-items
				width 80%
				margin auto
				position relative
			&-item
				display inline-block
				vertical-align middle
				width 33.3%
				text-align center
				position relative
				z-index 1
				&.active
					.o-clocker-settings-steps-item-bullet
						background #00bff3
					.o-clocker-settings-steps-item-text
						color #00bff3
				&-bullet
					width: 35px
					height: 35px
					line-height: 35px
					border-radius: 50%
					background: rgba(0,191,243,0.09)
					font-size: 20px;
					display: inline-block
					text-align: center
					-webkit-transition: 0.7s
					transition: 0.7s
					font-weight: 700
				&-text
					padding-top 8px
					font-size 12px
					color #00bff3
					font-weight 400
					display block
					transition .7s
					text-align center
		&-buttons
			padding-bottom 60px
			@media screen and (max-height: 500px)
				padding-bottom 30px
			@media screen and (min-height: 550px)
				padding-bottom 80px
			position absolute
			bottom 0
			left: 0
			right 0
			z-index 1000
			.table
				height 30px
				a
					color white
					font-size 14px
					text-decoration none
.likerstile
	background transparent
	color white
	font-size 14px
	text-decoration none
	border 0
	outline none
	text-align right
