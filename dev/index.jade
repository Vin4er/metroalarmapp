#timer_end.hidden
#timer_start.hidden
#timer_afterstart.hidden

script(type='text/javascript').

	window.INTERVAL = 1000*60;

script(type='text/javascript', src='cordova.js')

script(type='text/javascript', src='assets/js/handlebars.js')

script(type='text/javascript', src='assets/js/jquery-1.10.2.js')
script(type='text/javascript', src='assets/js/metro.js')

script(type='text/javascript', src='assets/js/typeahead.bundle.js')




	


script(type='text/javascript', src='assets/js/js-select.js')
script(type='text/javascript', src='assets/js/timer.js')
script(type='text/javascript', src='assets/js/phonegap-app.js')
script(type='text/javascript').

	window.app.initialize();
